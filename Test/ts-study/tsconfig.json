{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,    
    "alwaysStrict": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "importHelpers": true,
    "lib": [
      "es6",
      "dom",
      "ESNext"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
  ]
}